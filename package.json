{
  "name": "@localizesh/sdk",
  "description": "A TypeScript/JavaScript SDK for building Localize.sh processors.",
  "repository": "localizesh/sdk-es",
  "license": "Apache-2.0",
  "author": "Localize.sh",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsc",
    "schema": "curl -o src/schema.json https://raw.githubusercontent.com/localizesh/schema/refs/heads/main/schema.json && json2ts -i src/schema.json -o src/schema.ts --unreachableDefinitions",
    "test": "vitest run"
  },
  "dependencies": {
    "@types/hast": "^3.0.4",
    "ajv": "^8.17.1",
    "hastscript": "^9.0.1",
    "js-md5": "^0.8.3",
    "unist-util-visit": "^5.1.0",
    "unist-util-visit-parents": "^6.0.2"
  },
  "devDependencies": {
    "@types/node": "^25.3.2",
    "json-schema-to-typescript": "^15.0.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
